{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["renderer/components/*"],
      "@entities/*": ["domain/entities/*"],
      "@sqlite/*": ["main/services/sqlite/*"],
      "@services/*": ["main/services/*"],
    }
  },
  "include": ["src"]
}
